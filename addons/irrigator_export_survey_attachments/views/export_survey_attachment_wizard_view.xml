<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_export_survey_attachment_wizard" model="ir.ui.view">
        <field name="name">export.survey.attachment.wizard.form</field>
        <field name="model">export.survey.attachment.wizard</field>
        <field name="arch" type="xml">
            <form string="Экспорт вложений опроса">
                <sheet>
                    <div class="alert alert-info">
                        Вы уверены, что хотите экспортировать вложения для выбранных ответов на опрос?
                    </div>
                    <footer>
                        <button name="action_export" type="object" string="Экспортировать" class="btn-primary"/>
                        <button string="Отмена" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
